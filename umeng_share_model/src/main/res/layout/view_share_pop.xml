<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        >
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="分享到"
            android:textColor="@color/color_text_666666"
            android:textSize="@dimen/fontsize_28px" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_line_height"
            android:background="#ededed"/>

    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="@dimen/dp22"
        android:paddingRight="@dimen/dp22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp168"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp20"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/share_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/selector_sina_click"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新浪微博"
                    android:layout_marginTop="@dimen/dp7"
                    android:textColor="@color/color_text_333333"
                    android:textSize="@dimen/fontsize_24px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/share_friend_cicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@mipmap/wx_circle2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈"
                    android:layout_marginTop="@dimen/dp7"
                    android:textColor="@color/color_text_333333"
                    android:textSize="@dimen/fontsize_24px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/share_QQ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/selector_qq_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ好友"
                    android:layout_marginTop="@dimen/dp7"
                    android:textColor="@color/color_text_333333"
                    android:textSize="@dimen/fontsize_24px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/share_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/selector_wx_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"
                    android:layout_marginTop="@dimen/dp7"
                    android:textColor="@color/color_text_333333"
                    android:textSize="@dimen/fontsize_24px"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/share_qq_space"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/selector_space_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ空间"
                    android:layout_marginTop="@dimen/dp7"
                    android:textColor="@color/color_text_333333"
                    android:textSize="@dimen/fontsize_24px"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp40"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp40"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp40"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="#ededed"
        android:layout_marginTop="@dimen/dp20"/>
    <TextView
        android:id="@+id/cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:background="@color/white"
        android:textColor="@color/color_text_666666"
        android:text="取消"
        android:gravity="center"
        android:textSize="@dimen/fontsize_32px"/>
</LinearLayout>